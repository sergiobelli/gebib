<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

  <transactionManager type="JDBC" commitRequired="false">
    <dataSource type="SIMPLE">
      <property name="JDBC.Driver" value="org.gjt.mm.mysql.Driver"/>
      <property name="JDBC.ConnectionURL" value="jdbc:mysql://localhost/biblioteca"/>
      <property name="JDBC.Username" value="root"/>
      <property name="JDBC.Password" value=""/>
    </dataSource>
  </transactionManager>

  
  
  <sqlMap resource="Autori.xml"/>
  
  <sqlMap resource="Libri.xml"/>
  
  <sqlMap resource="Publicazioni.xml"/>
  
  <sqlMap resource="Properties.xml"/>

</sqlMapConfig>